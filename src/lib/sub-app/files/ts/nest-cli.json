{
  "$schema": "https://json.schemastore.org/nest-cli",
  "language": "ts",
  "collection": "@scrypt-swiss/nest-templates",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoKeyOfComment": "description",
          "controllerKeyOfComment": "description"
        }
      }
    ]
  }
}
